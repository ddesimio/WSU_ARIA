<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mwdindustries.aria" >
    <activity android:name=".BasicLayoutCheckActivity" android:screenOrientation="landscape"></activity>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity android:name=".ARView" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".POIActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_poi"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".insidePOI"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_inside"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".scheduleActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_schedule"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest> <!-- android:label="@string/app_name" -->

